<idea-plugin>
  <id>ru.person.bizgen</id>
  <name>Ru BizGen</name>

  <vendor url="https://github.com/DmitryEm506/bizgen">Emelyanenko Dmitry</vendor>

  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="ru.person.bizgen.settings.persistent.BizGenAppSettingsPersistent"/>

    <applicationService
      serviceInterface="ru.person.bizgen.settings.BizGenAppSettingsRepository"
      serviceImplementation="ru.person.bizgen.settings.persistent.BizGenAppSettingsPersistent"/>

    <applicationService
      serviceInterface="ru.person.bizgen.settings.AppActionSettingsService"
      serviceImplementation="ru.person.bizgen.settings.AppActionSettingsServiceImpl"
    />

    <applicationService
      serviceInterface="ru.person.bizgen.notification.NotificationSettingsService"
      serviceImplementation="ru.person.bizgen.notification.NotificationSettingsServiceImpl"
    />

    <applicationService
      serviceInterface="ru.person.bizgen.notification.NotificationSettingsView"
      serviceImplementation="ru.person.bizgen.notification.NotificationSettingsServiceImpl"
    />

    <applicationService
      serviceInterface="ru.person.bizgen.actions.GeneratorActionProvider"
      serviceImplementation="ru.person.bizgen.actions.GeneratorActionProviderImpl"
    />

    <applicationService
      serviceInterface="ru.person.bizgen.actions.GeneratorActionService"
      serviceImplementation="ru.person.bizgen.actions.GeneratorActionServiceImpl"
    />

    <applicationService
      serviceInterface="ru.person.bizgen.notification.NotificationService"
      serviceImplementation="ru.person.bizgen.notification.NotificationServiceImpl"
    />

    <applicationConfigurable
      parentId="tools"
      instance="ru.person.bizgen.ui.AppSettingsConfigurable"
      id="ru.person.bizgen.ui.AppSettingsConfigurable"
      displayName="Ru BizGen"
    />
  </extensions>

  <actions>
    <action id="ru.person.bizgen.BizGenMainAction" class="ru.person.bizgen.BizGenMainAction" text="BizGenMainAction"
      description="Show action group for generate Russian business data">
      <keyboard-shortcut keymap="$default" first-keystroke="alt ctrl E"/>
    </action>
  </actions>
</idea-plugin>